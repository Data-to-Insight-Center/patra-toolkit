{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Patra Model Card",
  "type": "object",
   "commonFields": {
    "urlOrDoi": {
      "oneOf": [
        {
          "pattern": "^(https?|ftp):\\/\\/[^\\s/$.?#].[\\S]*$",
          "description": "Must be a valid URL"
        },
        {
          "pattern": "^10\\.\\d{4,9}/[^\\s]+$",
          "description": "or valid DOI"
        },
        {
          "enum": [""],
          "description": "or empty"
        },
        {
          "type": "null"
        }
      ]
    }
  },
  "properties": {
    "id": {
      "type": "string",
      "description": "The id of the Model Card"
    },
    "name": {
      "type": "string",
      "description": "The name of the Model Card"
    },
    "version": {
      "type": "string",
      "description": "The version of the Model Card"
    },
    "short_description": {
      "type": "string",
      "description": "A brief description of the Model Card"
    },
    "full_description": {
      "type": "string",
      "description": "A comprehensive description of the Model Card"
    },
    "keywords": {
      "type": "string",
      "description": "Keywords for the model card"
    },
    "author": {
      "type": "string",
      "description": "The author or creator of the Model Card"
    },
    "input_data": {
      "$ref": "#/commonFields/urlOrDoi"
    },
    "input_type": {
      "type": "string",
      "description": "Type of the input data"
    },
    "output_data": {
      "$ref": "#/commonFields/urlOrDoi"
    },
    "foundational_model": {
      "description": "If a foundational model has been used, provide the model ID",
      "type": "string"
        },
   "category": {
    "type": "string",
    "enum": [
        "classification",
        "regression",
        "clustering",
        "anomaly detection",
        "dimensionality reduction",
        "reinforcement learning",
        "natural language processing",
        "computer vision",
        "recommendation systems",
        "time series forecasting",
        "graph learning",
        "graph neural networks",
        "generative modeling",
        "transfer learning",
        "self-supervised learning",
        "semi-supervised learning",
        "unsupervised learning",
        "causal inference",
        "multi-task learning",
        "metric learning",
        "density estimation",
        "multi-label classification",
        "ranking",
        "structured prediction",
        "neural architecture search",
        "sequence modeling",
        "embedding learning",
        "other"
    ]
    },
    "documentation": {
      "type": "string",
      "description": "URL for documentation if available"
    },
    "ai_model": {
      "description": "Description of the AI Model",
      "type": [
        "object"
      ],
      "properties": {
        "name": {
          "description": "The name of the model.",
          "type": "string"
        },
        "version": {
          "type": "string",
          "description": "The version of the Model"
        },
        "description": {
          "description": "Description of the AI Model.",
          "type": "string"
        },
        "owner": {
          "type": "string",
          "description": "The owner of the Model"
        },
        "location": {
          "description": "Downloadable URL of the model",
          "type": "string"
        },
        "license": {
          "description": "Licence the model",
          "type": "string"
        },
        "model_structure": {
          "description": "Structure of the model",
          "type": "object"
        },
        "framework": {
          "type": "string",
          "enum": [
            "sklearn",
            "tensorflow",
            "pytorch",
            "other"
          ]
        },
        "model_type": {
          "type": "string",
          "enum": [
            "cnn",
            "decision_tree",
            "dnn",
            "rnn",
            "svm",
            "kmeans",
            "llm",
            "random_forest",
            "lstm",
            "gnn",
            "other"
          ]
        },
        "test_accuracy": {
          "description": "Accuracy of the model for the test data",
          "type": "number"
        },
        "model_metrics": {
          "description": "Metrics of the AI Model",
          "type": "array",
          "items": {
            "$ref": "#/fields/metrics"
          }
        }
      },
      "required": [
        "name",
        "version",
        "description",
        "owner",
        "location",
        "license",
        "framework",
        "test_accuracy",
        "model_type"
      ]
    },
    "bias_analysis": {
      "type": ["object", "null"],
      "properties": {
        "demographic_parity_diff": {
          "type": "number"
        },
        "equal_odds_difference": {
          "type": "number"
        }
      }
    },
    "xai_analysis": {
      "description": "Explainability analysis of the Model Card.",
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "bias_metrics": {
          "description": "Metrics of the bias scanner",
          "type": "array",
          "items": {
            "$ref": "#/fields/metrics"
          }
        }
      }
    },
"model_requirements": {
  "type": [
    "array",
    "null"
  ],
  "items": {
    "type": "string"
  }
}
  },
  "required": [
    "name",
    "version",
    "short_description",
    "full_description",
    "author",
    "keywords",
    "input_data",
    "input_type",
    "output_data",
    "ai_model"
  ],
  "fields": {
    "metrics": {
      "type": "object",
      "properties": {
        "key": {
          "description": "Name of the metric",
          "type": "string"
        },
        "value": {
          "description": "The value of the performance metric.",
          "type": "string"
        }
      }
    }
  },
     "commonFields": {
    "urlOrDoi": {
      "oneOf": [
        {
          "pattern": "^(https?|ftp):\\/\\/[^\\s/$.?#].[\\S]*$",
          "description": "Must be a valid URL"
        },
        {
          "pattern": "^10\\.\\d{4,9}/[^\\s]+$",
          "description": "or valid DOI"
        },
        {
          "enum": [""],
          "description": "or empty"
        },
        {
          "type": "null"
        }
      ]
    }
  }
}
